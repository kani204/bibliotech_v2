<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
</head>
<body>
    <%- include('partials/navbar.ejs') %>

    <main class="perfil">
        <section class="info">
            <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png">
            <h3><%- username %></h3>
        </section>
        <section class="libros">
            <article>
                <h2>Mis me gusta</h2>
                <div class="librosContenedor">
                    <% gustados.forEach(libro => {%>
                        <div class="libro">
                            <figure>
                                <a href="/libro/<%- libro.LibroID %>">
                                    <img src="<%- libro.imagen %>" alt="<%- libro.Titulo %>">
                                </a>
                            </figure>
                            <a href="/libro/<%- libro.LibroID %>">
                                <p><%- libro.Titulo %></p>
                            </a>
                        </div>
                    <%})%>
                </div>
                <a href="/perfil/gustados" class="botonVerTodo">Ver todo</a>
            </article>
            <article>
                <h2>Mis seguidos</h2>
                <div class="librosContenedor">
                    <% seguidos.forEach(libro => {%>
                        <div class="libro">
                            <figure>
                                <a href="/libro/<%- libro.LibroID %>">
                                    <img src="<%- libro.imagen %>" alt="<%- libro.Titulo %>">
                                </a>
                            </figure>
                            <a href="/libro/<%- libro.LibroID %>">
                                <p><%- libro.Titulo %></p>
                            </a>
                        </div>
                    <%})%>
                </div>
                <a href="/perfil/seguidos" class="botonVerTodo">Ver todo</a>
            </article>
            <article>
                <h2>Ver mas tarde</h2>
                <div class="librosContenedor">
                    <% verLuego.forEach(libro => {%>
                        <div class="libro">
                            <figure>
                                <a href="/libro/<%- libro.LibroID %>">
                                    <img src="<%- libro.imagen %>" alt="<%- libro.Titulo %>">
                                </a>
                            </figure>
                            <a href="/libro/<%- libro.LibroID %>">
                                <p><%- libro.Titulo %></p>
                            </a>
                        </div>
                    <%})%>
                </div>
                <a href="/perfil/ver-luego" class="botonVerTodo">Ver todo</a>
            </article>
        </section>
    </main>
    <footer class="footerContainer">
        <%- include('partials/footer.ejs') %>
    </footer>
</body>
</html>